[Unit]
Description=QMem System Monitor Daemon
After=network.target

[Service]
Type=forking
ExecStart=/usr/bin/qmemd
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/qmem.pid
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
ReadOnlyPaths=/
ReadWritePaths=/run /var/log

[Install]
WantedBy=multi-user.target
